     <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg">
                <div class="card-header text-center bg-primary text-white">
                    <h3>Enable Authenticator</h3>
                </div>
                <div class="card-body">
                    <p class="mb-4 text-center">
                        To enhance your account security, set up the Authenticator App for two-factor authentication.
                        Scan the QR code below using an authenticator app like Microsoft Authenticator or Google Authenticator.
                    </p>
                    <div class="text-center mb-4">
                        <img src="@Model.QrCodeImage" alt="QR Code" class="img-fluid border rounded w-25" />
                    </div>
                    <p class="text-center">
                        Alternatively, use this key manually in your app:
                        <code class="text-danger">@Model.SharedKey</code>
                    </p>
                @if (!ModelState.IsValid)
                {
                    <div class="alert alert-danger" role="alert">
                        <ul class="mb-0">
                            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                            {
                                <li>@error.ErrorMessage</li>
                            }
                        </ul>
                    </div>
                }
                <form method="post">
                        <div class="mb-3">
                            <label for="Code" class="form-label">Verification Code</label>
                            <input type="text" id="Code" name="Code" class="form-control" placeholder="Enter 6-digit code" required>
                            <div class="form-text">
                                Enter the 6-digit code generated by your Authenticator app.
                            </div>
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-success px-4">
                                Verify and Enable
                            </button>
                        </div>
                    </form>
                </div>
                @* <div class="card-footer text-muted text-center">
                    <small>Having trouble? <a href="/Account/Support" class="text-decoration-none">Contact Support</a></small>
                </div> *@
            </div>
        </div>
    </div>

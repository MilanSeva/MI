        };

        if (!String.prototype.supplant) {
            String.prototype.supplant = function (o) {
                return this.replace(/{([^{}]*)}/g,
                    function (a, b) {
                        var lst = b.split('.');
                        $obj = o;
                        for (var i = 0; i < (lst.length); i++) {
                            var r = $obj[lst[i]];
                            if (r === null || typeof r === "undefined") return "";
                            if (typeof r === 'object') {
                                $obj = r;
                            }
                            else {
                                return typeof r === 'string' || typeof r === 'number' ? r : a;
                            }
                        }
                    }
                );
            };
        }

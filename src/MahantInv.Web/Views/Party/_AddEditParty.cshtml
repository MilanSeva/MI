@model MahantInv.Infrastructure.Entities.Party

<div id="AddEditParty" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="ModalTitle">Add/Edit Party</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                </button>
            </div>
            <div class="modal-body">
                <div id="PartyErrorSection" class="text-danger"></div>
                <input type="hidden" asp-for="@Model.Id" />
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label asp-for="@Model.Name"></label>
                            <input type="text" asp-for="@Model.Name" class="form-control form-control-sm" placeholder="Name" />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="@Model.CategoryId"></label>
                            <select asp-for="@Model.CategoryId" class="form-control form-control-sm" placeholder="Category">
                                <option value="">Select Category</option>
                                @foreach (var item in (ViewBag.Categories as IEnumerable<MahantInv.Infrastructure.Entities.PartyCategory>))
                                {
                                    <option value="@item.Id">@item.Name</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="@Model.Type"></label>
                            <select asp-for="@Model.Type" class="form-control form-control-sm" placeholder="Type">
                                <option value="">Select Party Type</option>
                                @foreach (var item in (ViewBag.PartyTypes as SelectList))
                                {
                                    <option value="@item.Value">@item.Text</option>
                                }
                            </select>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label asp-for="@Model.PrimaryContact"></label>
                            <input type="tel" asp-for="@Model.PrimaryContact" class="form-control form-control-sm" placeholder="Primary Contact" />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="@Model.City"></label>
                            <input type="text" asp-for="@Model.City" class="form-control form-control-sm" placeholder="State" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="@Model.Country"></label>
                            <select id="Country" class="form-control form-control-sm" style="width:100%;"></select>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" onclick="Common.SaveParty(this)" data-target="AddEditParty">Save</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
</div>
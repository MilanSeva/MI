@model MahantInv.Infrastructure.Dtos.User.AddUserDto

<div id="AddUser" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add User</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                </button>
            </div>
            <div class="modal-body">
                <div id="AddUserErrorSection" class="text-danger"></div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label asp-for="@Model.UserName"></label>
                            <input type="text" asp-for="@Model.UserName" class="form-control form-control-sm" placeholder="User Name" />
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                            <label asp-for="@Model.Email"></label>
                            <input type="email" asp-for="@Model.Email" class="form-control form-control-sm" placeholder="Email" />
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                            <label asp-for="@Model.Role"></label>
                            <select asp-for="@Model.Role" class="form-control form-control-sm" placeholder="Role">
                                <option value="">Select Role</option>
                                @foreach (var item in ViewBag.Roles as SelectList)
                                {
                                    <option value="@item.Value">@item.Text</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                            <label asp-for="@Model.Password"></label>
                            <input type="password" asp-for="@Model.Password" class="form-control form-control-sm" placeholder="Password" />
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                            <label asp-for="@Model.ConfirmPassword"></label>
                            <input type="password" asp-for="@Model.ConfirmPassword" class="form-control form-control-sm" placeholder="Confirm Password" />
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" onclick="Common.SaveUser(this)" data-target="AddUser">Save</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
</div>
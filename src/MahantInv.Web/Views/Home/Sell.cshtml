@{
    ViewData["Title"] = "Usage";
}
<div class="card bg-dark border-dark">
    <div class="card-header">
        <div class="row g-3 align-items-center">
            <div class="col-md-3 col-sm-3 col-lg-3">
                <select id="ProductUsageSelect" mu class="form-control form-control-sm" style="width: 100%"></select>
            </div>

            <div class="col-md-2 col-sm-2 col-lg-2">
                <input id="UsageQuantity" type="number" class="form-control form-control-sm" placeholder="Quantity" />
            </div>
            <div class="col-md-2 col-sm-2 col-lg-2">
                <select id="BuyersSelect" class="form-control form-control-sm" style="width: 100%">
                    <option value="">Select Buyer</option>
                    @foreach (var item in (ViewBag.Buyers as SelectList))
                    {
                        <option value="@item.Value">@item.Text</option>
                    }
                </select>
            </div>
            <div class="col-md-2 col-sm-2 col-lg-2">
                <input id="UsageDate" type="date" class="form-control form-control-sm" placeholder="Date" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
            </div>
            <div class="col-md-1 col-sm-1 col-lg-1">
                <button class="btn btn-outline-success btn-sm" type="button" onclick="Common.UseProduct(this)">
                    <span>Save</span>
                </button>
            </div>
            <div class="col-md-2 col-sm-2 col-lg-2 float-end">
                <button class="btn btn-outline-warning btn-sm" type="button" onclick="Common.ResetGrid(this)">
                    <span>Reset Grid</span>
                </button>
                <button class="btn btn-outline-primary btn-sm" type="button" onclick="Common.ExportToExcel(this)">
                    <span>Export to Excel</span>
                </button>
            </div>
        </div>
    </div>
    <div class="card-body ag-theme-balham-auto-dark" id="usagedata">
    </div>
</div>
